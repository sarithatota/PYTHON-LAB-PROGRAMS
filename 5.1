import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns
# Step 2: Load or define dataset
data = pd.DataFrame({
    'Name': ['A', 'B', 'C', 'D', 'E'],
    'Score': [85, 90, 78, 92, 88],
    'Attempts': [1, 2, 2, 1, 3],
    'Age': [20, 21, 19, 22, 20]
})
# Step 3: Histogram of scores
plt.figure(figsize=(6,4))
sns.histplot(data['Score'], bins=5, kde=True)
plt.title("Score Distribution")
plt.xlabel("Score")
plt.ylabel("Frequency")
plt.show()
# Step 4: Box plot of attempts
plt.figure(figsize=(6,4))
sns.boxplot(x=data['Attempts'])
plt.title("Attempts Spread")
plt.xlabel("Attempts")
plt.show()
# Step 5: Scatter plot of Age vs Score
plt.figure(figsize=(6,4))
sns.scatterplot(x='Age', y='Score', data=data)
plt.title("Age vs Score")
plt.xlabel("Age")
plt.ylabel("Score")
plt.show()
# Step 6: Bar chart of scores by name
plt.figure(figsize=(6,4))
sns.barplot(x='Name', y='Score', data=data)
plt.title("Scores by Student")
plt.xlabel("Name")
plt.ylabel("Score")
plt.show()
# Step 7: Line plot of scores
plt.figure(figsize=(6,4))
plt.plot(data['Name'], data['Score'], marker='o')
plt.title("Score Trend")
plt.xlabel("Name")
plt.ylabel("Score")
plt.grid(True)
plt.show()
